<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">

    <com.taquente.dpadview.DpadView
        android:id="@+id/dpad_view"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        app:dividerColor="@android:color/holo_blue_bright"
        app:dividerWidth="3dp"
        app:drawablesColor="@android:color/white"
        app:innerCircleColor="@color/inner_circle_color"
        app:innerCirclePercentage="0.35"
        app:sectionColor="@color/section_color"
    />


</FrameLayout>